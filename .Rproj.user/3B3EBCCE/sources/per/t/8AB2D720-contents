         unemployed = P36,
         issue1, 
         issue2, 
         issue3, 
         post, 
         month,
         religiosity = P31,
         date,
         simpatiavox) %>%
  mutate(issue = unlist(
    apr2018.raw %>%
      transmute(
        inmi = case_when(
          issue1==1 | issue2==1 | issue3==1 ~ 1,
