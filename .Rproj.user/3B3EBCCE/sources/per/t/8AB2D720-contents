                                 P36 = 9,
                                 P21 = c(98, 99),
                                 P1 = c(8, 9),
                                 P3 = c(8, 9),
                                 P33 = c(8, 9),
                                 P30A = c(16, 98, 99))) %>%
  mutate(issue1 = if_else(P701 == 18, 1, 0),
         issue2 = if_else(P702 == 18, 1, 0),
         issue3 = if_else(P703 == 18, 1, 0),
         post = 0,
         month = 4,
         simpatiavox = if_else(P20 == 21 | P19 == 21, 1, 0),
         date = "04/2018") %>%
