  mutate(issue1 = if_else(P901 == 18, 1, 0),
         issue2 = if_else(P902 == 18, 1, 0),
         issue3 = if_else(P903 == 18, 1, 0),
         post = 1,
         month = 16,
         simpatiavox = NA,
         date = "05/2019",
         religiosity = case_when(P33 == 1 | P33 == 2 ~ 1,
                                 P33 == 3 ~ 2,
                                 P33 == 4 ~ 3,
                                 P33 == 5 ~ 4,
                                 TRUE ~ 0)) %>%
  select(CCAA,
         sit_esp = P1, 
         prosp_esp = P3, 
         prosp_pers = P5,
